export PKM="zypper"
alias in="sudo $PKM install"
alias up="sudo $PKM dup"
alias search="$PKM search"
alias yeet="sudo $PKM remove --clean-deps"

alias .f="git --git-dir=$HOME/.dotfiles --work-tree=$HOME"
alias grub-update="sudo grub2-mkconfig -o /boot/efi/EFI/fedora/grub.cfg"
alias starship-install="curl -s https://starship.rs/install.sh | sh"

alias free="free -wh --si"
alias l="ls"
alias la="ls -lah"
alias bye="sudo poweroff"

alias v="$EDITOR"
alias tm="btop"
alias pf="sudo"

alias ga="git add"
alias gc="git commit -m"
alias gpush="git push"
alias gpull="git pull"

alias wttr="curl https://wttr.in/"
alias wttr_v2="curl https://v2.wttr.in/"
alias wttr_moon="curl https://wttr.in/Moon"
alias pfetch="curl -s https://raw.githubusercontent.com/dylanaraps/pfetch/master/pfetch | sh"
alias neofetch="curl -s https://raw.githubusercontent.com/dylanaraps/neofetch/master/neofetch | bash"
